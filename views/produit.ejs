<%-include('header'); -%>

<body>
    <% products.forEach(function(element) { %>
        <% if (element.id === produit.id){%>
    <div class="produit-container">
        <!-- Product Image -->
        <div class="product-image">
            <img src="/img/<%= element.image %>" alt="Rameur Professionnel">
        </div>

        <!-- Product Info -->
        <div class="produit-info">
            <h1>Rameur professionnel</h1>
            <p class="price">Prix de vente : <strong>1499€</strong></p>
            <p class="description">
                Conçu pour un usage régulier à intensif. 4 fois et plus par semaine (de 15 à 60 minutes par séance).
                <br>Le Rameur professionnel est le rameur de référence dans le milieu du sport à domicile, des clubs de sport et de fitness, mais aussi de la préparation physique des sportifs.
            </p>
            <div class="availability">
                <p><strong>Retrait en magasin</strong></p>
                <p>Lannion</p>
                <p><span class="available">&#x2705;</span> Ce produit est disponible en magasin !</p>
            </div>

            <!-- Offer selection -->
            <div class="offer-selection">
                <label for="offer-select">Sélectionner une offre:</label>
                <select id="offer-select">
                    <option value="26">26 € / jour</option>
                </select>
            </div>

            <button class="add-to-cart">Ajouter au panier</button>
            <button class="wishlist">&#x2661;</button>
        </div>
    </div>

    <!-- Video section -->
    <div class="video-section">
        <a href="#">
            <img src="img/rameur.png" alt="Lancer la vidéo">
            <span>Lancer la vidéo explicative</span>
        </a>
    </div>
<% }}); %>
</body>
</html>


<%-include('footer'); -%>